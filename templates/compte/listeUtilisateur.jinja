{% extends "base.jinja" %}

{% block contenu %}
<div class="container mt-3">
    <h2>Les utilisateurs</h2>
    {# <div class="alert alert-info">
        {% if session.nom_utilisateur %}
        <br>Utilisateur connecté: {{ session.nom_utilisateur }}
            {%if session.role == "admin" %}
            <span>Administrateur</span>
            {% endif %}
        {% endif %}
    </div> #}

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Prénom utilisateur</th>
                    <th>Nom utilisateur</th>
                    <th>Courriel</th>
                    <th>Crédit</th>
                    <th>Rôle</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for utilisateur in utilisateurs %}
                <tr>
                    <td>{{ utilisateur.id_utilisateur }}</td>
                    <td>{{ utilisateur.prenom_utilisateur }}</td>
                    <td>{{ utilisateur.nom_utilisateur }}</td>
                    <td>{{ utilisateur.courriel }}</td>
                    <td>{{ utilisateur.credit }} $</td>
                    <td>
                        <span class="badge {% if utilisateur.role == 'admin' %}bg-danger{% else %}bg-secondary{% endif %}">

                            {% if utilisateur.role == "admin" %}Admin{% else %}Utilisateur{% endif %}
                        </span>
                    </td>
                    <td>
                        {# {% if session.role == "admin" and utilisateur.role == "admin" %} #}
                        <form
                            action="{{ url_for('compte.supprimer_compte', id_utilisateur=utilisateur.id_utilisateur) }}"
                            method="POST" style="display: inline;">
                            <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal"
                                data-bs-target="#confirmDeleteModal{{ utilisateur.id_utilisateur }}">
                                Supprimer
                            </button>
                         
                            <div class="modal fade" id="confirmDeleteModal{{ utilisateur.id_utilisateur }}"
                                tabindex="-1" aria-labelledby="confirmDeleteLabel{{ utilisateur.id_utilisateur }}"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title"
                                                id="confirmDeleteLabel{{ utilisateur.id_utilisateur }}">Confirmation de
                                                suppression</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Voulez-vous vraiment supprimer cet utilisateur ?<strong>{{
                                                utilisateur.prenom_utilisateur }} 
                                                {{utilisateur.nom_utilisateur }}</strong> 
                                            <br>
                                            <span class="text-danger">Attention ! Suppression en cours!</span>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Annuler</button>
                                            <form
                                                action="{{ url_for('compte.supprimer_compte', id_utilisateur=utilisateur.id_utilisateur) }}"
                                                method="POST" style="display: inline;">
                                                <button type="submit" class="btn btn-danger">Confirmer
                                                    </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        {% else%}
                        <span class="text-muted">-</span>
                        {% endif %}
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="6" class="text-center">Aucun utilisateur</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}