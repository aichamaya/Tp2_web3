{% extends "base.jinja" %}
{% block titre %}Créer un compte{% endblock %}

{% block content %}
    <h1 class="text-3xl font-bold mb-6">Créer un compte</h1>

    <form method="POST" action="{{ url_for('compte.creation') }}" class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-lg">
        
        <div class="mb-4">
            <label for="courriel" class="block text-gray-700 font-semibold mb-2">Courriel</label>
            <input type="email" id="courriel" name="courriel" 
                   value="{{ form.courriel|default('') }}" 
                   class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 
                          {% if errors.courriel %} border-red-500 {% endif %}" 
                   required>
            {% if errors.courriel %}
                <p class="text-red-500 text-sm mt-1">{{ errors.courriel }}</p>
            {% endif %}
        </div>
        
        <div class="mb-4">
            <label for="mot_de_passe" class="block text-gray-700 font-semibold mb-2">Mot de passe</label>
            <input type="password" id="mot_de_passe" name="mot_de_passe" 
                   class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 
                          {% if errors.mot_de_passe %} border-red-500 {% endif %}" 
                   required>
            {% if errors.mot_de_passe %}
                <p class="text-red-500 text-sm mt-1">{{ errors.mot_de_passe }}</p>
            {% else %}
                <p class="text-gray-500 text-sm mt-1">Minimum 8 caractères.</p>
            {% endif %}
        </div>
        
        <div class="mb-6">
            <label for="confirmation" class="block text-gray-700 font-semibold mb-2">Confirmer le mot de passe</label>
            <input type="password" id="confirmation" name="confirmation" 
                   class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 
                          {% if errors.confirmation %} border-red-500 {% endif %}" 
                   required>
            {% if errors.confirmation %}
                <p class="text-red-500 text-sm mt-1">{{ errors.confirmation }}</p>
            {% endif %}
        </div>
        
        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition duration-200">
            S'inscrire
        </button>
    </form>
    
    <p class="text-center mt-4 text-gray-600">
        Vous avez déjà un compte ? <a href="{{ url_for('compte.connexion') }}" class="text-blue-600 hover:underline">Connectez-vous ici</a>.
    </p>

{% endblock %}