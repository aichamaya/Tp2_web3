{% extends "base.jinja" %}
{% block title %}Tous les services{% endblock %}
{% block contenu %}
<h1 class="h4 mb-3">Tous les services</h1>

<form class="row g-2 mb-3" method="get">
  <div class="col-md-4">
    <input class="form-control" name="q" value="{{ request.args.get('q','') }}" placeholder="Rechercher…">
  </div>
  <div class="col-md-3">
    <select class="form-select" name="categorie">
      <option value="">Catégorie</option>
      {# {% for c in categories %}
      <option value="{{ c.id_categorie }}" {%"selected" if request.args.get('categorie')==(c.id_categorie|string) else ''%}></option> 
         
        {{ c.nom_categorie }} 
         {% endfor %}#}
      </option>
    </select>
  </div>
  <div class="col-md-3">
    <input class="form-control" name="localisation" value="{{ request.args.get('localisation','') }}"
      placeholder="Ville">
  </div>
  <div class="col-md-2">
    <button class="btn btn-primary w-100">Filtrer</button>
  </div>
</form>

<div class="row g-3">
{% if services  %}
  {% for s in services %}
  <div class="col-md-4">
    <div class="card h-100">
        
      {% set images_src = url_for('static', filename='images/' + s.nom_images) if s.nom_images else url_for('static',
      filename='images/default_service.png') %}
      <img class="card-img-top object-fit-cover" style="height: 200px;" src="{{ images_src }}" alt="{{ s.titre }}">
      <div class="card-body">
        <h5 class="card-title mb-1">{{ s.titre }}</h5>
        <div class="small text-muted">{{ s.nom_categorie }} • {{ s.localisation }}</div>
        <a class="stretched-link" href="{{ url_for('service.service_detail', service_id=s.id_service) }}"></a>
      </div>
    </div>
  </div>
  {% endfor %}
{% else %}
  <p class="text-muted">Aucun service trouvé.</p>

{% endif %}
</div>
{% endblock %}